<Window x:Class="ScienceCenter.Windows.AddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceCenter.Windows"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Icon="\Resources\icon.ico"
        Title="Добавление оборудования" Height="650" Width="600">
    <Grid>
        <WrapPanel Grid.Column="1" Orientation="Vertical">
            <Label Margin="30" Content="ПОДРОБНОСТИ ОБ ОБОРУДОВАНИИ" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="0.395,1.926" FontSize="22" Cursor="Arrow" Height="42" Width="425"/>
            <Label x:Name="idEq" FontSize="18"/>
            <WrapPanel  Margin="0,10,0,0">
                <Label Content="Название: " FontSize="18"/>
                <TextBox  x:Name="Name" FontSize="18" HorizontalAlignment="Left" Background="{x:Null}" Width="147" />
            </WrapPanel>
            <WrapPanel  Margin="0,10,0,0">
                <Label Content="Вес, в кг: " FontSize="18"/>
                <TextBox  x:Name="vs" FontSize="18" HorizontalAlignment="Left" Background="{x:Null}"  PreviewTextInput="LiveCheck" Width="154" />
            </WrapPanel>
            <WrapPanel  Margin="0,10,0,0">
                <Label Content="Дата постановки на баланс: " FontSize="18"/>
                <DatePicker Name="datePicker"
                    SelectedDateFormat="Short" 
                    DisplayDateEnd="{x:Static sys:DateTime.Today}"
                    DisplayDateStart="1900-01-01"
                    SelectedDateChanged="datePicker_SelectedDateChanged"/>
            </WrapPanel>
            <WrapPanel  Margin="0,10,0,0">
                <Label Content="Инвентарный номер: " FontSize="18"/>
                <TextBox x:Name="Invent" FontSize="18" HorizontalAlignment="Left" Width="144"/>
            </WrapPanel>
            <WrapPanel  Margin="0,10,0,0">
                <Label Content="Предполагаемый срок использования: " FontSize="18"/>
                <TextBox x:Name="AVG_Year" FontSize="18" HorizontalAlignment="Left" PreviewTextInput="LiveCheck" Width="161"/>
            </WrapPanel>
            <WrapPanel  Margin="0,10,0,0">
                <Label Content="Описание: " FontSize="18"/>
                <TextBox x:Name="Description" FontSize="18" HorizontalAlignment="Left" Width="169"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal"  Margin="0,10,0,0">
                <Label Content="Аудитория" FontSize="18"/>
                <ComboBox x:Name="Place" FontSize="14" SelectionChanged="PlaceLong_SelectionChanged" />
            </WrapPanel>
            <WrapPanel Orientation="Horizontal"  Margin="0,10,0,0">
                <Label Content="Подразделение" FontSize="18"/>
                <ComboBox x:Name="Office" FontSize="18" SelectionChanged="OfficeLong_SelectionChanged"/>
            </WrapPanel>

            <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                <Button x:Name="save" Margin="10" Content="СОХРАНИТЬ" HorizontalAlignment="Left" FontSize="18" Background="#00FA9A" Click="Save"/>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>
